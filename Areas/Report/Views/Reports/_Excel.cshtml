@model Standus_5_0.Areas.Report.Models.ReportComponent
<div class="mb-4">

    <!-- File path and auto import -->
    <div class="mb-3 row" style="width:40%;">
        <label class="col-sm-4 col-form-label">File Path:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="FilePath" />
        </div>
    </div>

    <div class="mb-3 row" style="width:40%;">
        <label class="col-sm-4 col-form-label">Auto Import:</label>
        <div class="col-sm-8 d-flex align-items-center">
            <input type="checkbox" class="form-check-input" name="import" />
        </div>
    </div>

    <!-- Excel columns table -->
    <table class="table table-striped table-hover" id="tblexcel" style="width:40%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Excel Column Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" class="form-control" name="excelcolumns[0].ColumnName" />
                </td>
                <td>
                    <input type="text" class="form-control" name="excelcolumns[0].numbers" />
                </td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm" onclick="addExcelColumn()">+</button>
                </td>
            </tr>
        </tbody>
    </table>

</div>


