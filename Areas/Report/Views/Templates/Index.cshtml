@model IEnumerable<Standus_5_0.Areas.Report.Models.Template>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Report/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-area="Report" asp-controller="Templates" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-success">            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Screen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Screen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> |
                @Html.ActionLink("Preview", "Filter", new { templateid = item.ID, screenName = item.Screen, filterString = item.Name, showFilterWindow = 1 }) |
                @Html.ActionLink("Copy", "CopyTemplate", new { templateid = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
