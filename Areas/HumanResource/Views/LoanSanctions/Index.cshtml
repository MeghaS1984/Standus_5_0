@model IEnumerable<Standus_5_0.Areas.HumanResource.Models.LoanSanction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}

@* <h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p> *@

<span>Pending Loan Request</span>
    <div class="col-md-12">
        <div id="pending" style="width:100%">
        </div>
    </div>

<span>Approved Loan Request</span>
<table class="table table-striped table-bordered">
    <thead>
        <tr class="table-success">
            <th>
                Employee
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interest)
            </th>
            <th>
                Installment Amount
            </th>
            <th>
                Installment #
            </th>
            <th>
                Start Date
            </th>
            <th>
                Deduction
            </th>
            <th>
                Request #
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Request.Employee.Name 
            </td>
            <td>
                @item.Date.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Installment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstallmentNo)
            </td>
            <td>
                @item.InstallmentDate.ToString("MMM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deduction.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.RequestNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SanctionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SanctionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SanctionId">Delete</a> |
                <a asp-action="index" asp-controller="LoanSchedules" asp-route-id="@item.SanctionId">Schedule</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '/humanresource/LoanSanctions/Pending',
            type: 'GET',
            success: function (result) {
                $('#pending').html(result);
            },
            error: function (xhr, status, error) {
                console.error("AJAX Error: " + error);
            }
        });
    })
</script>