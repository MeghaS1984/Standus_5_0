@model Standus_5_0.Areas.HumanResource.Models.Statutory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Raw(@ViewBag.Alert)
        </div>
    </div>
</div>

<h5>Add Statutory Details</h5>
<hr />
<div style="display:flex;flex-direction:row;">
    <div class="staff-menu">
        <partial name="../_StaffMenu" />
    </div>
    <div class="col-md-4 form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input name="EmployeeID" value="@ViewData["EmployeeID"]" type="hidden"/>
            
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a href="/Humanresource/Employees/Index">Back to List</a>
            </div>
            <br>
            <div id="statutory">
            </div>
        </form>
    </div>
</div>


<script>
    $.ajax({
        url: '/Humanresource/Statutories/Index',
        type: 'GET',
        data: { id: @ViewData["EmployeeID"]},
        success: function (result) {
            $("#statutory").html(result);
        }
    });
</script>