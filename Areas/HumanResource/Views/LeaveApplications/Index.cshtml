@model IEnumerable<Standus_5_0.Areas.HumanResource.Models.LeaveApplication>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}

<div class="flex-header-container">
    <div>
        <h5>Leave Request</h5>
    </div>

    <div>
        <a asp-action="Create">Add New Request</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Head)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>Status</th>
            <th>Comment</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Head.HeadType)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @if (item.status == "Approved") {
                    <span style="color:green;font-weight:bold">
                        @Html.DisplayFor(modelItem => item.status ) 
                    </span>
                    }
                    else if (item.status == "Reject")
                    {
                        <span style="color:red;font-weight:bold">
                            @Html.DisplayFor(modelItem => item.status)
                        </span>
                    } else {
                        @Html.DisplayFor(modelItem => item.status)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comment)
                </td>
            <td>
                    @if (item.status != "Approved" && item.status != "Reject" && (item?.cancel == false || item?.cancel == null))
                    {
                        <a href="javascript:void()" onclick="cancel_request(@item.id,this)">Cancel</a>
                }
                    else if (item?.cancel != null && item?.cancel == true)
                    {
                        @:Cancelled
                    }
                    else if (item.status == "Reject")
                    {
                        @:Rejected
                    }
                @* <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    // Move the function definition outside of $(document).ready
    function cancel_request(id, obj) {
        let td = $(obj).closest('tr').find('td').eq(8); // Fix: Using jQuery to find the td
        $.ajax({
            url: "/HumanResource/LeaveApplications/cancelRequest", // Ensure this URL is correct
            type: 'GET',
            data: { id: id },
            success: function(result) {
                td.text('Cancelled'); // Fix: Use jQuery .text() instead of innerText
            },
            error: function(xhr, status, error) {
                console.error('Error:', error); // Add error handling for debugging
            }
        });
    }
</script>

