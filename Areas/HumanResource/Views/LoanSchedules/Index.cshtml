@model IEnumerable<Standus_5_0.Areas.HumanResource.Models.LoanSchedule>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<span>Employee : @ViewData["Employee"]</span>   |  
<span>Request # : @ViewData["Request"]</span>   |
<span><a href="loansanctions/index">Back to Loan List</a></span>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-success">
            <th>
                Installment #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Salary Date
            </th>
            @* <th></th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Installment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paid)
            </td>
            <td>
                @if (item.Paid == 0) {
                    @Html.DisplayFor(modelItem => item.Forward)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryDate)
            </td>
            @* <td>
                <a asp-action="Edit" asp-route-id="@item.SanctionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SanctionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SanctionID">Delete</a>
            </td> *@
        </tr>
        }
    </tbody>
</table>
<script>
    $("#Forward").on('click', function() {
        window.location.href='@Url.Action("updateSchedule","LoanSchedules")';
    });
</script>