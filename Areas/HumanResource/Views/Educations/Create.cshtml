@model Standus_5_0.Areas.HumanResource.Models.Education

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Raw(@ViewBag.Alert)
        </div>
    </div>
</div>

<div style="display:flex;flex-direction:row;">
    <div class="staff-menu">
        <partial name="../_StaffMenu" />
    </div>
    <div class="col-md-4 form-container">
        <div class="form-header">
            <h5>Add Education</h5>
        </div>
        <div class="form-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <Input asp-for="EmployeeID" class ="form-control" asp-items="@ViewData["EmployeeID"]" type="hidden"/>
            <div class="form-group">
                <label asp-for="EducationType" class="control-label"></label>
                @* <select asp-for="EducationType" class="form-control" asp-items="ViewBag.EducationType"></select> *@
                    <Input asp-for="EducationType" class="form-control" asp-items="@ViewData["EducationType"]" />
                <span asp-validation-for="EducationType" class="text-danger"></span>
            </div>            
        </form>
        </div>
        <div class="form-group form-footer">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


