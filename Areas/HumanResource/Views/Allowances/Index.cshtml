@model IEnumerable<Standus_5_0.Areas.HumanResource.Models.Allowance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}

<div class="flex-header-container">
    <div>
        <h5>Allowance</h5>
    </div>

    <div>
        <a asp-action="Create">Add New Allowance</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoundOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fixed)
            </th>
            <th>
               Payroll Rank
            </th>
            <th>
                Inactive
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoundOff)
            </td>
            <td>
                    @if (item.Fixed ) { 
                        <span>Fixed</span> } else  {<span>  </span>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayrollSlNO)
            </td>
            <td>
                    @if (!item.InActive) {
                    <span style="color:mediumseagreen">Active</span> }
                    else  {<span style="color:orangered"> Inactive </span>}
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> |
                    <a href="/humanresource/slabcategories/create?id=@item.ID" >Assign To</a>
            </td>
        </tr>
}
    </tbody>
</table>
