    <style>
        .progress-container {
            position: relative;
            margin: 50px;
        }

        .step {
            position: relative;
            padding-left: 35px; /* extra space for larger dot */
            height: 45px; /* slightly taller to center larger dots */
            display: flex;
            align-items: center;
        }

        .dot {
            width: 13px;
            height: 13px;
            border-radius: 50%;
            background-color: #ccc;
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1;
        }

            .dot.active {
                background-color: #4caf50;
            }

        .label {
            font-size: 14px;
            white-space:nowrap;
            flex-shrink:0;
        }

        /* vertical line connecting to next dot */
        .step:not(:last-child)::after {
            content: '';
            position: absolute;
            left: 5.5px; /* 13px / 2 - 1px for line width */
            top: 50%;
            height: 45px; /* same as step height */
            width: 2px;
            background-color: #ccc;
            z-index: 0;
        }

        .step.active:not(:last-child)::after {
            background-color: #4caf50;
        }
    </style>

    <div class="progress-container">
